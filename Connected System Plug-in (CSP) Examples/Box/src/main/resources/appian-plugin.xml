<appian-plugin name="Box Connected System" key="com.appian.sdk.csp.box">

  <plugin-info>
    <description>Connect to Box</description>
    <vendor name="Appian" url="http://www.appian.com"/>
    <version>1.0.0.0</version>
    <application-version min="7.6.0.4"/>
  </plugin-info>

  <connected-system-template key="BoxPlatformConnectedSystem" name="BoxPlatformConnectedSystem"
                             class="com.appian.sdk.csp.box.BoxPlatformConnectedSystem">

    <integration-template key="BoxHelloWorldIntegration" name="BoxHelloWorldIntegration"
                          class="com.appian.sdk.csp.box.integration.BoxHelloWorldIntegration" />
    <integration-template key="GetFolderInfo" name="GetFolderInfo"
                          class="com.appian.sdk.csp.box.integration.GetFolderInfo" />
    <integration-template key="GetFolderItems" name="GetFolderItems"
                          class="com.appian.sdk.csp.box.integration.GetFolderItems" />
    <integration-template key="GetUser" name="GetUser"
                          class="com.appian.sdk.csp.box.integration.GetUser" />
    <integration-template key="CreateFolder" name="CreateFolder"
                          class="com.appian.sdk.csp.box.integration.CreateFolder" />
    <integration-template key="UploadFile" name="UploadFile"
                          class="com.appian.sdk.csp.box.integration.UploadFile" />
    <integration-template key="DeleteFile" name="DeleteFile"
                          class="com.appian.sdk.csp.box.integration.DeleteFile" />

  </connected-system-template>
</appian-plugin>
